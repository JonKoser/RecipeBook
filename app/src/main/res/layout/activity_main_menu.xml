<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jkoser.jon.recipebook.MainActivityMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/mainMenuBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wood"
        android:contentDescription="@string/background_descrip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/ingredientsButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="130dp"
        android:onClick="onIngredientsClick"
        android:text="@string/menu_opt_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/recipeBookButton"
        app:layout_constraintRight_toRightOf="@+id/recipeBookButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/recipeBookButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:text="@string/menu_opt_three"
        app:layout_constraintBottom_toTopOf="@+id/ingredientsButton"
        app:layout_constraintLeft_toLeftOf="@+id/groceryListButton"
        app:layout_constraintRight_toRightOf="@+id/groceryListButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/groceryListButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:onClick="onGroceryListClick"
        android:text="@string/menu_opt_two"
        app:layout_constraintBottom_toTopOf="@+id/recipeBookButton"
        app:layout_constraintLeft_toLeftOf="@+id/findRecipesButton"
        app:layout_constraintRight_toRightOf="@+id/findRecipesButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/findRecipesButton"
        android:layout_width="194dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:onClick="onFindRecipeClick"
        android:text="@string/menu_opt_one"
        app:layout_constraintBottom_toTopOf="@+id/groceryListButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/mainMenuTitle"
        android:layout_width="174dp"
        android:layout_height="38dp"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:text="@string/menu_title"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:typeface="sans"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
